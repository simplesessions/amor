doctype html
html.no-js(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Foundation
    link(rel="stylesheet" href="stylesheets/app.css")
    script(src="bower_components/modernizr/modernizr.js")
    script(src="bower_components/angular/angular.js")
  body

    #info
      .field
        label(for="input-loan-amount") Loan Amount
        input#input-loan-amount.currency(type="text" placeholder="$")
      .field
        label(for="input-term") Term
        input#input-term(type="text" placeholder="years")
      .field
        label(for="input-interest") Interest Rate
        input#input-interest(type="text" placeholder="%")
      .field
        label(for="input-start-date-month") Start Date
        select#input-start-date-month
          option(value="1" selected) January
          option(value="2") February
          option(value="3") March
          option(value="4") April
          option(value="5") May
          option(value="6") June
          option(value="7") July
          option(value="8") August
          option(value="9") September
          option(value="10") October
          option(value="11") November
          option(value="12") December
        select#input-start-date-year
          - var year = 1990
          while year < 2016
            option(value=year)=year
            - year++

    script(src="bower_components/jquery/dist/jquery.min.js")
    script(src="bower_components/foundation/js/foundation.min.js")
    script(src="js/amortization.js")
    script(src="js/app.js")