#controls
  .layout
    form#info
      fieldset
        .amounts
          .field
            label(for="input-loan-amount")
              | Loan Amount
              .input
                span.prefix $
                input#input-loan-amount.currency(type="number" placeholder="How much?" required)
          .field
            label(for="input-term")
              | Term
              .input
                span.prefix Years
                input#input-term(type="number" placeholder="How long?" required)
          .field
            label(for="input-interest")
              | Interest Rate
              .input
                span.prefix %
                input#input-interest(type="number" placeholder="Your rate" required)
        .dates
          .field
            label(for="input-start-date-month") Start Date
            select#input-start-date-month
              option(value="1" selected) January
              option(value="2") February
              option(value="3") March
              option(value="4") April
              option(value="5") May
              option(value="6") June
              option(value="7") July
              option(value="8") August
              option(value="9") September
              option(value="10") October
              option(value="11") November
              option(value="12") December
            select#input-start-date-year
              - var year = 1990
              - var maxYear = 2016
              while year < maxYear
                if year === maxYear - 1
                  option(value=year selected)=year
                else
                  option(value=year)=year
                - year++
      .field.submit
        input.button(type="submit" name="submit" value="Calculate")